<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="model"
      type="id.co.app.nucocore.domain.entities.row.SelectionButtonModel" />
  </data>

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
      android:layout_width="@dimen/as_card_width"
      android:layout_height="@dimen/as_card_height"
      android:layout_margin="@dimen/space_x1"
      app:cardBackgroundColor="@color/nuco_purple_7"
      app:cardCornerRadius="@dimen/radius_card_moderate"
      app:cardElevation="0dp">

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:bindImageResId="@{model.backgroundImage}"
        app:gone="@{!model.selected}"
        tools:src="@drawable/illustration_area_clonal_garden" />

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_check_gray"
        android:layout_width="@dimen/icon_moderate"
        android:layout_height="@dimen/icon_moderate"
        android:layout_gravity="end|top"
        android:layout_margin="@dimen/space_x2"
        android:background="@drawable/bg_circle_primary"
        android:backgroundTint="@color/nuco_gray_4"
        android:padding="@dimen/space_2dp"
        android:tint="@color/color_text_white_0"
        app:gone="@{model.selected}"
        app:srcCompat="@drawable/ic_round_check_24" />

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_check"
        android:layout_width="@dimen/icon_moderate"
        android:layout_height="@dimen/icon_moderate"
        android:layout_gravity="end|top"
        android:layout_margin="@dimen/space_x2"
        android:background="@drawable/bg_circle_purple"
        android:padding="@dimen/space_2dp"
        android:tint="@color/color_text_white_0"
        app:gone="@{!model.selected}"
        app:srcCompat="@drawable/ic_round_check_24" />

      <CheckedTextView
        android:id="@+id/text_name"
        style="@style/Headline.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checked="@{model.selected}"
        android:gravity="center"
        android:paddingHorizontal="@dimen/space_x1"
        android:text="@{model.name}"
        android:textColor="@color/color_menu_text"
        tools:checked="true"
        tools:text="@string/area_clonal_garden" />

      <View
        android:id="@+id/button_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    </androidx.cardview.widget.CardView>


  </FrameLayout>

</layout>