<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="model"
      type="id.co.app.nucocore.domain.entities.view.SelectionGroup" />
  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/nuco_gray_3">

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="@dimen/option_group_height"
      android:layout_marginHorizontal="@dimen/space_1dp"
      android:layout_marginVertical="@dimen/space_2dp"
      app:cardBackgroundColor="@color/nuco_purple_2"
      app:cardCornerRadius="@dimen/radius_card_small"
      app:cardElevation="0dp">

      <androidx.cardview.widget.CardView
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_2dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/radius_card_small"
        app:cardElevation="0dp">

        <CheckedTextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/color_card_group_option"
          android:checked="@{model.selected}"
          tools:checked="true" />

      </androidx.cardview.widget.CardView>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckedTextView
          android:id="@+id/text_start"
          style="@style/Body.Moderate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:checked="@{model.selected}"
          android:gravity="center"
          android:maxLines="2"
          android:paddingHorizontal="@dimen/space_x2"
          android:paddingTop="@dimen/space_2dp"
          android:text="@{model.textStart}"
          android:textColor="@color/color_text_group_option"
          tools:text="91A1" />

        <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1">

          <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_line_default"
            android:rotation="90" />

          <CheckedTextView
            style="@style/Body.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_card_group_option"
            android:checked="@{model.selected}"
            android:gravity="center"
            android:padding="@dimen/space_2dp"
            android:text="@string/until"
            android:textColor="@color/color_text_gray_0" />

        </FrameLayout>

        <CheckedTextView
          android:id="@+id/text_end"
          style="@style/Body.Moderate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:checked="@{model.selected}"
          android:gravity="center"
          android:maxLines="2"
          android:paddingHorizontal="@dimen/space_x2"
          android:paddingBottom="@dimen/space_2dp"
          android:text="@{model.textEnd}"
          android:textColor="@color/color_text_group_option"
          tools:text="91A15" />

      </LinearLayout>

      <FrameLayout
        android:id="@+id/check_wrapper"
        android:layout_width="@dimen/button_size_small"
        android:layout_height="@dimen/button_size_small"
        android:layout_gravity="top|right">

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/check_off"
          android:layout_width="@dimen/icon_moderate"
          android:layout_height="@dimen/icon_moderate"
          android:layout_gravity="center"
          android:background="@drawable/bg_circle_silver"
          android:padding="@dimen/space_2dp"
          android:tint="@color/primary_disabled"
          app:gone="@{model.selected}"
          app:srcCompat="@drawable/ic_round_check_24" />

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/check_on"
          android:layout_width="@dimen/icon_moderate"
          android:layout_height="@dimen/icon_moderate"
          android:layout_gravity="center"
          android:background="@drawable/bg_circle_purple"
          android:padding="@dimen/space_2dp"
          android:tint="@color/nuco_white"
          android:visibility="gone"
          app:gone="@{!model.selected}"
          app:srcCompat="@drawable/ic_round_check_24"
          tools:visibility="visible" />

      </FrameLayout>

      <View
        android:id="@+id/button_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple_card_primary"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="gone" />

    </androidx.cardview.widget.CardView>

  </FrameLayout>

</layout>