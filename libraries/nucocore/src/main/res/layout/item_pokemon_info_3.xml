<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_evolution"
            style="@style/Headline.Moderate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_horizontal_lv2"
            android:layout_marginTop="@dimen/space_x4"
            android:gravity="center|start"
            android:text="@string/evolution_dd"
            android:textColor="@color/color_on_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_evolution"
            android:layout_width="0dp"
            android:layout_height="@dimen/evolution_height"
            android:layout_marginTop="@dimen/space_x1"
            android:layout_marginBottom="@dimen/space_x6"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/content_horizontal_lv2"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="@dimen/content_horizontal_lv2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_evolution" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>