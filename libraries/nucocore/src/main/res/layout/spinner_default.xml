<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_label"
      style="@style/Headline.Small.Demi"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingHorizontal="@dimen/space_x2"
      android:layout_marginBottom="@dimen/space_x2"
      android:text="@string/type"
      tools:text="@string/type" />

    <id.co.app.nucocore.components.spinner.SpinnerX
      android:id="@+id/vw_spinner"
      style="@style/Spinner"
      android:layout_width="match_parent"
      android:layout_height="@dimen/spinner_height"
      android:paddingHorizontal="@dimen/space_2dp"
      android:paddingVertical="@dimen/space_x3" />

  </LinearLayout>
</layout>