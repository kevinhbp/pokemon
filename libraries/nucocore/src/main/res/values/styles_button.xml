<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Level 0: Non Use-Able -->
  <style name="Button">
    <item name="android:textColor">@color/color_text_white_0</item>
    <item name="android:textSize">@dimen/text_headline_moderate</item>
    <item name="android:fontFamily">@font/maisonneue_ext_bold</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingStart">@dimen/space_x5</item>
    <item name="android:paddingEnd">@dimen/space_x5</item>
    <item name="android:layout_height">@dimen/button_size_moderate</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:background">@drawable/bg_button_primary</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="Button.Primary" parent="Button">
    <item name="android:textColor">@color/color_text_button_primary</item>
    <item name="android:background">@drawable/bg_button_primary</item>
  </style>

  <style name="Button.Primary.Destructive" parent="Button">
    <item name="android:textColor">@color/primary_destructive_color_on</item>
    <item name="android:background">@drawable/bg_button_primary_destructive</item>
  </style>

  <style name="Button.Secondary" parent="Button">
    <item name="android:textColor">@color/color_text_button_secondary</item>
    <item name="android:background">@drawable/bg_button_secondary</item>
  </style>

  <style name="Button.Secondary.Destructive" parent="Button">
    <item name="android:textColor">@color/secondary_destructive_color_on</item>
    <item name="android:background">@drawable/bg_button_secondary_destructive</item>
  </style>

  <style name="Button.Tertiary" parent="Button">
    <item name="android:textColor">@color/tertiary_active_color_on</item>
    <item name="android:background">@drawable/bg_button_tertiary</item>
  </style>

  <style name="Button.Tertiary.Destructive" parent="Button">
    <item name="android:textColor">@color/tertiary_destructive_color_on</item>
    <item name="android:background">@drawable/bg_button_tertiary_destructive</item>
  </style>


</resources>