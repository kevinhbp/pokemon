<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_checked="true">
    <shape android:shape="rectangle">
      <solid android:color="@color/nuco_purple_1" />
      <stroke android:width="@dimen/space_2dp" android:color="@color/nuco_purple_1" />
      <corners android:radius="@dimen/radius_card_large" />
    </shape>
  </item>

  <item android:state_checked="false">
    <shape android:shape="rectangle">
      <solid android:color="@color/nuco_red_1" />
      <stroke android:width="@dimen/space_2dp" android:color="@color/nuco_red_1" />
      <corners android:radius="@dimen/radius_card_large" />
    </shape>
  </item>
</selector>