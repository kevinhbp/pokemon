<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_enabled="true">
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <solid android:color="@color/secondary_active" />
          <stroke android:color="@color/secondary_active_color_on" android:width="2dp"/>
          <corners android:radius="@dimen/button_size_large" />
        </shape>
      </item>
      <item android:drawable="@drawable/bg_ripple_button" />
    </layer-list>
  </item>

  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <solid android:color="@color/secondary_disabled" />
      <stroke android:color="@color/secondary_disabled_color_on" android:width="2dp"/>
      <corners android:radius="@dimen/button_size_large" />
    </shape>
  </item>
</selector>