<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="model"
      type="id.co.app.home.model.HomeWidgetsModel" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_x2"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
      android:layout_width="0dp"
      android:layout_height="@dimen/home_widget_card_height"
      android:layout_marginHorizontal="@dimen/space_x2"
      android:layout_marginVertical="@dimen/space_x2"
      android:layout_weight="1"
      app:cardBackgroundColor="@color/nuco_white"
      app:cardCornerRadius="@dimen/radius_card_moderate"
      app:cardElevation="@dimen/elevation_small">

      <CheckedTextView
        android:id="@+id/button_data_sync"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:checked="@{model.dataSyncRequired}"
        tools:checked="false"
        android:alpha="0.9"
        android:background="@drawable/bg_widget_data_sync" />

      <FrameLayout
        android:layout_width="@dimen/home_widget_card_image_height"
        android:layout_height="@dimen/home_widget_card_image_height"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/space_x1">

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/image_data_sync_ok"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          app:srcCompat="@drawable/illustration_data_sync_ok"
          app:gone="@{model.dataSyncRequired}"
          tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/image_data_sync_required"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          tools:visibility="gone"
          app:gone="@{!model.dataSyncRequired}"
          app:srcCompat="@drawable/illustration_data_sync_required" />

      </FrameLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_x4"
        android:layout_marginEnd="@dimen/home_widget_card_image_height"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
          style="@style/Headline.Moderate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/color_text_white_1"
          android:text="@{model.dataSyncLabel}"
          tools:text="Data Sync" />

        <TextView
          style="@style/Caption.Moderate.Book"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_x1"
          android:textColor="@color/color_text_white_1"
          android:text="@{model.dataSyncMessage}"
          tools:text="Last Sync: 20/08/2022 12:34" />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:layout_width="0dp"
      android:layout_height="@dimen/home_widget_card_height"
      android:layout_marginHorizontal="@dimen/space_x2"
      android:layout_marginVertical="@dimen/space_x2"
      android:layout_weight="1"
      app:cardBackgroundColor="@color/nuco_white"
      app:cardCornerRadius="@dimen/radius_card_moderate"
      app:cardElevation="@dimen/elevation_small">

      <CheckedTextView
        android:id="@+id/button_notifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="@{model.notificationsUnread}"
        android:alpha="0.9"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_widget_notifications" />

      <FrameLayout
        android:layout_width="@dimen/home_widget_card_image_height"
        android:layout_height="@dimen/home_widget_card_image_height"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/space_x1">

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/image_notifications_all_read"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          app:gone="@{model.notificationsUnread}"
          app:srcCompat="@drawable/illustration_notification_allread"
          tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/image_notifications_unread"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          tools:visibility="visible"
          app:gone="@{!model.notificationsUnread}"
          app:srcCompat="@drawable/illustration_notification_unread" />

      </FrameLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_x4"
        android:layout_marginEnd="@dimen/home_widget_card_image_height"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
          style="@style/Headline.Moderate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/color_text_white_1"
          android:text="@{model.notificationsLabel}"
          tools:text="Notifications" />

        <TextView
          style="@style/Caption.Moderate.Book"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_x1"
          android:textColor="@color/color_text_white_1"
          android:text="@{model.notificationsMessage}"
          tools:text="You have 3 unread\nnotifications" />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>

</layout>